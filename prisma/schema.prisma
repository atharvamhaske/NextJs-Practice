generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  email String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]
}

enum Role {
  USER
  ROLE
}

model Task {

  id String @id @default(cuid())
  title String
  desciprtion String?
  status TaskStatus @default(PENDING)
  ownerId String
  owner User @relation(fields: [ownerId], references: [id])
  version Int 
  deletedAt DateTime? 
  createdAt DateTime
  updatedAt DateTime

  @@index([status])
  @@index([ownerId])
  @@index([deletedAt])
  @@unique([title, ownerId])

}

enum TaskStatus {
  PENDING
  DONE
}

model IdempotencyKEy {
  id String @id @default(cuid())
  key String
  method String
  path String
  userId String
  repsone Json
  createdAt DateTime @default(now())
}